script = "create_zip.py"

genrule(
    name = "genrule-one",
    srcs = [
        script,
    ],
    out = "output-one.zip",
    cmd = "python $SRCS $OUT 0",
)

genrule(
    name = "genrule-one_outs",
    srcs = [
        script,
    ],
    outs = {
        "output": [
            "output-one.zip",
        ],
    },
    cmd = "python $SRCS $OUT/output-one.zip 0",
)

